<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <Button
        android:id="@+id/AC_Group"
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:layout_marginTop="25dp"
        android:backgroundTint="@color/grey"
        android:text="22 AC"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@id/MA_Group"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/MA_Group"
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:backgroundTint="@color/grey"
        android:text="22 MA"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@id/TNG_Group"
        app:layout_constraintEnd_toEndOf="@id/AC_Group"
        app:layout_constraintStart_toStartOf="@id/AC_Group"
        app:layout_constraintTop_toBottomOf="@id/AC_Group" />

    <Button
        android:id="@+id/TNG_Group"
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:backgroundTint="@color/grey"
        android:text="22 ТНГ"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@id/Tm_Group"
        app:layout_constraintEnd_toEndOf="@id/MA_Group"
        app:layout_constraintStart_toStartOf="@id/MA_Group"
        app:layout_constraintTop_toBottomOf="@id/MA_Group" />

    <ImageView
        android:id="@+id/strelochkaMTFGroups"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:paddingEnd="47dp"
        android:src="@drawable/ic_baseline_arrow_back_ios_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:text="Назад"
        android:textColor="@color/blue"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="@id/strelochkaMTFGroups"
        app:layout_constraintStart_toStartOf="@+id/strelochkaMTFGroups"
        app:layout_constraintTop_toTopOf="@id/strelochkaMTFGroups" />

    <Button
        android:id="@+id/Tm_Group"
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:backgroundTint="@color/grey"
        android:text="22 ТМ"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@id/XT_Group"
        app:layout_constraintEnd_toEndOf="@id/TNG_Group"
        app:layout_constraintStart_toStartOf="@id/TNG_Group"
        app:layout_constraintTop_toBottomOf="@id/TNG_Group" />

    <Button
        android:id="@+id/XT_Group"
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:backgroundTint="@color/grey"
        android:text="22 XT"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/Tm_Group"
        app:layout_constraintStart_toStartOf="@id/Tm_Group"
        app:layout_constraintTop_toBottomOf="@id/Tm_Group" />


</androidx.constraintlayout.widget.ConstraintLayout>